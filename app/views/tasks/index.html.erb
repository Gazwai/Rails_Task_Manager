<div class="container">
  <h1>My Tasks</h1>
    <% @tasks.each do |task| %>
        <ul>
          <li><%= link_to task.title, task_path(task) %>
          <%= link_to "Delete #{task.title}",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
        </ul>
    <% end %>
    <%= link_to 'add new task', new_task_path() %>
</div>
